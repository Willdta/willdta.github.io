@import './variables.styl'

// Link back to Landing Section //

.landing-link
  background white
  z-index 100
  box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.1)
  width 50px
  height 50px
  border-radius 50%
  justify-content center
  align-items center
  position fixed
  right 20px
  top 40px
  display flex
  visibility hidden
  opacity 0
  transition all 1s linear

  a
    color $grey
    font-size 12px

  img
    height 15px

.toggle-landing-link
  visibility visible
  opacity 1

// Landing Section Styling //

#landing-section
  height 100vh
  display flex
  flex-direction column
  justify-content center
  align-items center

  h1
    padding 50px 20px
    border 1px solid black
    font-size 70px
    font-weight $light
    margin-top 20px
    display none

  ul
    margin-bottom 20px
    margin-top 50px
    display flex

    li
      opacity 0
      visibility hidden
      transition all 1s ease

    li>a
      margin 0 20px
      color black
      font-size 20px
      position relative

    li>a:before
      content ''
      position absolute
      bottom -10px
      left 0
      right 0
      background black
      width 100%
      height 1px
      transform scaleX(0)
      transition all 1s ease

    li>a:hover:before
      transform scaleX(1)

    .toggle-nav
      visibility visible
      opacity 1

// Landing Section Media Queries //

@media only screen and (max-width 800px)
  #landing-section
    h1
      font-size 50px

@media only screen and (max-width 600px)
  #landing-section
    h1
      font-size 30px
    
    ul>li>a
      font-size 18px
    
    ul>span
      font-size 18px

@media only screen and (max-width 400px)
  #landing-section
    h1
      font-size 25px

    ul>li>a
      font-size 16px
      margin 0 10px
    
    ul>span
      font-size 16px