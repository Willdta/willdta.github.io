@import './variables.styl'

// Link back to Landing Section //

.landing-link
  background white
  box-shadow 0 0 20px 0 rgba(0,0,0,0.1)
  width 50px
  height 50px
  border-radius: 50%
  justify-content center
  align-items center
  position fixed
  right 20px
  top 40px
  display flex
  visibility hidden
  opacity 0
  transition all 1s linear

  a
    color $grey
    font-size: 12px

  img
    height 15px

.toggle-landing-link
  visibility visible
  opacity 1

// Landing Section Styling //

#landing-section
  height 100vh
  display flex
  flex-direction column
  justify-content space-around
  align-items center

  h1
    font-weight $light
    margin-top 20px
    margin-bottom 50px
    color $grey

    span
      color black

  ul
    display flex
    margin-bottom 20px
    margin-top 50px

    li>a
      padding 20px
      color $grey

  .browser-image
    height 400px
    margin 20px 0

// Landing Section Media Queries //

@media only screen and (max-width 1100px)
  #landing-section
    h1
      font-size 25px

    .browser-image
      height 400px

@media only screen and (max-width 800px)
  #landing-section
    .browser-image
      height 300px

@media only screen and (max-width 600px)
  #landing-section
    justify-content center

    .browser-image
      height 200px

@media only screen and (max-width 400px)
  #landing-section
    h1
      font-size 20px

    ul>li>a
      font-size 14px

    .browser-image
      height 130px