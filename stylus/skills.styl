@import './variables.styl'

// Skills Section Styling //

#skills-section
  height 100%

  h1:before
    color $green

  h3    
    span
      color $green

  .skills-container
    display grid
    height 100%
    grid-template-columns repeat(4, 180px)
    grid-template-rows repeat(4, 180px)
    grid-column-gap 8em
    grid-row-gap 5em
    justify-content center
    align-content center

    div
      box-shadow 0 0 20px 0 rgba(0,0,0,0.1)
      background white
      display flex
      justify-content center
      align-items center
      position relative

      &:hover .skill-info
        opacity 1
        height 35px

      img
        height 70px
        width 70px
    
      .skill-info
        position absolute
        width 100%
        bottom 0
        height 0px
        opacity 0
        transition 250ms all cubic-bezier(0.64, 0.57, 0.67, 1.53)

        p
          color $grey

// Skills Section Media Queries //

@media only screen and (max-width 1200px)
  #skills-section
    .skills-container
      grid-template-columns repeat(3, 180px)
      grid-template-rows repeat(5, 180px)

@media only screen and (max-width 850px)
  #skills-section
    .skills-container
      grid-template-columns repeat(2, 180px)
      grid-template-rows repeat(8, 180px)
      grid-column-gap 3em
      grid-row-gap 3em

@media only screen and (max-width 800px)
  #skills-section    
    .skills-container
      .skills-row 
          p
            font-size 15px
            padding 50px 36px

@media only screen and (max-width 500px)
  #skills-section
    .skills-container
      .skills-row 
          p
            font-size 15px
            padding 50px 20px

@media only screen and (max-width 450px)
  #skills-section
    .skills-container
      grid-template-columns repeat(2, 140px)
      grid-template-rows repeat(8, 140px)
      grid-column-gap 2em
      grid-row-gap 3em

      p
        font-size 13px

@media only screen and (max-width 340px)
  #skills-section
    .skills-container
      grid-template-columns repeat(2, 110px)
      grid-template-rows repeat(8, 110px)
      grid-column-gap 2em
      grid-row-gap 3em
      
      p
        font-size 12px