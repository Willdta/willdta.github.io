@import './variables.styl'

// Skills Section Styling //

#skills-section
  .skills-container
    display grid
    height 100%
    grid-template-columns repeat(4, 180px)
    grid-template-rows repeat(4, 180px)
    grid-gap 7em
    justify-content center
    align-content center

    div
      box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.1px)
      display flex
      justify-content center
      align-items center
      position relative

      &:hover .skill-info
        opacity 1
        height 35px
        box-shadow none

      img
        height 70px
        width 70px
    
      .skill-info
        position absolute
        width 100%
        bottom 0
        height 0px
        opacity 0
        transition 250ms all cubic-bezier(0.64, 0.57, 0.67, 1.53)
        border none
        
        p
          color $grey

// Skills Section Media Queries //

@media only screen and (max-width 1200px)
  #skills-section
    .skills-container
      grid-template-columns repeat(3, 180px)
      grid-template-rows repeat(5, 180px)

@media only screen and (max-width 850px)
  #skills-section
    .skills-container
      grid-template-columns repeat(2, 160px)
      grid-template-rows repeat(8, 160px)
      grid-gap 5.5em

@media only screen and (max-width 800px)
  #skills-section    
    .skills-container
      .skills-row 
          p
            font-size 15px
            // padding 50px 36px

@media only screen and (max-width 500px)
  #skills-section
    .skills-container
      .skills-row 
          p
            font-size 15px
            padding 50px 20px

@media only screen and (max-width 450px)
  #skills-section
    .skills-container
      grid-template-columns repeat(2, 140px)
      grid-template-rows repeat(8, 140px)
      grid-gap 2em

      p
        font-size 13px

@media only screen and (max-width 340px)
  #skills-section
    .skills-container
      grid-template-columns repeat(2, 110px)
      grid-template-rows repeat(8, 110px)
      grid-gap 2em
      
      p
        font-size 12px