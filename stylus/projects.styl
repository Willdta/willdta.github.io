@import './variables.styl'

// Project Section Styling //

#project-section
  height 100%

  h1:before
    color $pink
  
  h3
    span
      color $pink

  .container
    position relative
    height 600px
    width 400px
    left 50%
    transform translateX(-50%)

    .child
      height 600px
      width 400px
      display inline-block
      margin 0 auto
      box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.1)
      border-radius 5px

      h1
        display inline-block
        position relative
        left 50%
        transform translateX(-50%)
        top 30px
        font-weight 300

      h1::after
        content ''
        position absolute
        height 1px
        width 50%
        background $pink
        bottom -5px
        left 0
        right 0

      p
        text-align center
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        padding 0
        margin 0
        width 70%
        line-height 30px

      .link-container
        display flex
        cursor pointer
        justify-content center
        padding 20px 0
        position absolute
        bottom 30px
        left 50%
        transform translateX(-50%)
        width 100%

        a
          margin 0 10px
          position relative
          color black

        a::after
          height 1px
          width 0%
          position absolute
          bottom -5px
          left 0
          content ''
          background $pink
          transition width 250ms ease

        a:hover::after
          width 100%

    .button-container
      display flex
      justify-content flex-end
      margin-top 30px

      .slide-button
        border none
        background $pink
        width 80px
        height 40px
        cursor pointer
        color white

      .next
        border-bottom-right-radius 20px
      
      .prev
        border-top-left-radius 20px

@media screen and (max-width 500px)
  #project-section
    .container
      width 300px
      
      .child
        width 300px

@media screen and (max-width 370px)
  #project-section
    .container
      width 250px
    
      .child
        width 250px

        p
          width 80%