@import './variables.styl'

// Project Section Styling //

#project-section
  height 100%
  background $blue
  margin-top 100px
  
  h1
    color white
    border-bottom 3px solid white

  h1:before
    color $pink
  
  h3
    span
      color $pink

  .project-container 
    height 950px
    position relative

    .child
      display flex
      justify-content space-around
      flex-direction column
      align-items center
      background white
      position absolute
      transform translate(-50%, -50%)
      transition all 200ms cubic-bezier(.51, .92, .24, 1.15)
      top 400px
      width 384px
      padding 0 50px
      border-radius 25px

      h1
        text-align center
        color $blue
        font-weight $medium
        position relative
        padding 0

        &:after
          content ''
          height 2px
          width 30%
          background $blue
          display inline-block
          position absolute
          bottom -10px
          left 0px
      
      p
        text-align center
        color $grey
        line-height 30px
        font-weight $light
      
      .link-container
        a
          color $blue
          margin 0 20px
          position relative
          font-weight $regular

          &:before
            content ''
            height 1px
            width 0%
            background $blue
            position absolute
            bottom -5px
            left 0
            transition width 400ms cubic-bezier(.51,.92,.24,1.15)

          &:hover:before
            width 100%

    .first
      height 600px
      z-index 3
      left 50%
      box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.1)

    .second
      height 550px
      left 43%
      z-index 2
    
    .third
      height 550px
      left 43%
      z-index 1
    
    .fourth
      height 550px
      left 57%
      z-index 1
    
    .button-container
      position absolute
      display grid
      bottom 100px
      grid-template-columns repeat(2, 100px)
      background white
      height 50px
      left 50%
      transform translateX(-50%)
      border-radius 25px
      box-shadow 0 0 20px 0 rgba(0, 0, 0, 0.1px)
      cursor pointer

      .next, .prev
        width 100px
        height 50px
        display flex
        justify-content center
        align-items center

        img
          height 20px

@media screen and (max-width 480px)
  #project-section
    .project-container
      .child
        width 300px

        h1
          font-size 25px

@media screen and (max-width 370px)
  #project-section
    .project-container
      .child
        width 230px
        padding 0 25px

        .link-container a
          margin 0 7px