@import './variables.styl'

*
  margin 0
  padding 0
  box-sizing border-box
  text-decoration none
  font-family $font
  list-style none

// Landing //
.landing-section
  height 1000px
  display flex
  flex-direction column
  justify-content space-between
  align-items center

  h1
    font-weight $light
    margin-top 50px

  .browser-image
    height 500px
    margin 20px 0

  .arrow-image
    height 30px
    margin-bottom 50px

nav
  position absolute
  right 100px
  top 50px

  .top
    height 20px

  ul
    li
      text-align center
      color black
      padding 10px 0
      
      a
        color transparent
  
  .bottom
    height 20px
    position relative
    top -120px

// Landing section media queries //
@media only screen and (max-width 1100px)
  .landing-section
    h1
      font-size 25px

    .browser-image
      height 400px

    .arrow-image
      margin 30px 0

    nav
      right 70px
      
      .top
        height 15px
        position relative
        left 50%
        transform: translateX(-50%)

      .bottom
        height 15px
        top -120px
        position relative
        left 50%
        transform: translateX(-50%)

@media only screen and (max-width 800px)
  .landing-section
    .browser-image
      height 300px

    nav
      right 50px

@media only screen and (max-width 600px)
  .landing-section
    justify-content center

    .browser-image
      height 200px
      margin 100px 0
    
    nav
      top 50px
      left 50%
      transform: translateX(-50%)

      .top, .bottom
        position relative
        left 50%
        transform: translateX(-50%)


@media only screen and (max-width 400px)
  .landing-section
    .browser-image
      margin 150px 0

    h1
      font-size 20px

    .browser-image
      height 130px

// Skills Section //
.skills-section
  height 1300px
  position relative

  h1
    font-size 77px
    text-align center
    padding-top 100px
    font-weight: $medium

  h3
    font-size: 40px
    text-align center
    color #A2A2A2
    font-weight: $regular

    span
      color #0BA300

  .skills-container
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    
    .skills-row 
      display flex
      justify-content center
      align-items center

      p
        padding 60px 90px
        font-size 25px
        color #A2A2A2
        font-weight $light