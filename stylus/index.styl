@import './variables.styl'

*
  margin 0
  padding 0
  box-sizing border-box
  text-decoration none
  font-family $font
  list-style none

// Header Styling //

#skills-section, #project-section, #about-section
  h1
    font-size 60px
    font-weight $medium
    text-align center
    padding-top 200px

  h1:before
    font-family 'Font Awesome 5 Free'
    font-weight bold
    font-size 35px
    vertical-align middle
    content '\f111'
    margin-right 40px
  
  h3 
    font-size 30px
    color $grey
    font-weight $regular
    text-align center
    padding-bottom 100px

// Header Media Queries //

@media only screen and (max-width 1100px)
  #skills-section, #project-section, #about-section
    h1
      font-size 50px

    h1:before
      font-size 25px
    
    h3
      font-size 30px

@media only screen and (max-width 800px)
  #skills-section, #project-section, #about-section
    h1
      font-size 40px

    h1:before
      font-size 20px
      margin-right 25px
    
    h3
      font-size 25px

@media only screen and (max-width 450px)
  #skills-section, #project-section, #about-section
    h1
      font-size 30px

    h1:before
      font-size 15px
      margin-right 20px
    
    h3
      font-size 20px