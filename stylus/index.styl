@import './variables.styl'

*
  margin 0
  padding 0
  box-sizing border-box
  text-decoration none
  font-family $font
  list-style none

// Landing //
.landing-section
  height 100vh
  display flex
  flex-direction column
  justify-content space-between
  align-items center

  h1
    font-weight $light
    margin-top 50px

  .browser-image
    height 500px
    margin 20px 0

  .arrow-image
    height 30px
    margin-bottom 50px

nav
  position absolute
  right 100px
  top 50px

  .top
    height 20px
    position relative
    left 50%
    transform: translateX(-50%)

  ul
    li
      text-align center
      color black
      padding 10px 0
      
      .menu
        color:black
        opacity 0
        pointer-events: none
        // color transparent
        text-align: center
        transition: all 400ms ease

      .menu-toggle
        opacity 1
        pointer-events: all

  .bottom
    height 20px
    position relative
    left 50%
    transform: translateX(-50%)
    top -120px
    transition: all 1000ms ease

  .bottom-transform
    top 3px

// Landing section media queries //
@media only screen and (max-width 1100px)
  .landing-section
    h1
      font-size 25px

    .browser-image
      height 400px

    .arrow-image
      margin 30px 0

    nav
      right 70px
      
      .top
        height 15px
        position relative
        left 50%
        transform: translateX(-50%)

      .bottom
        height 15px
        top -120px
        position relative
        left 50%
        transform: translateX(-50%)

